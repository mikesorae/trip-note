# A sample Gemfile
source "https://rubygems.org"

gem "sinatra"

# ActiveRecord
gem 'sinatra-activerecord'
gem 'activerecord'

group :development do
  gem "sinatra-contrib"
  # Build tool
  gem 'rake'
  # SQLite
  gem 'sqlite3'
  # Deploy
  gem 'foreman'
end

group :production do
  # PostgreSQL
  gem 'pg'
end
